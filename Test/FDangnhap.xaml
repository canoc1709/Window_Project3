        <Button Content="Button" HorizontalAlignment="Left" Margin="764,132,0,0" VerticalAlignment="Top"/>
        <StackPanel Margin="318,148,308,182">
            <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Username" Margin="5 5 5 27" x:Name="txtUsername" TextWrapping="Wrap" Width="177" BorderBrush="#FF2F5EEC" CaretBrush="Black" Background="White" Height="36" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="14" SelectionBrush="Black"    />
            <PasswordBox Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" x:Name="PB_Password" CaretBrush="Black" BorderBrush="#FF2F5EEC"  Background="White" materialDesign:HintAssist.Hint="Password" Width="177" Height="36" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"  Margin="5 5 5 27" FontSize="14" SelectionBrush="Black"/>
